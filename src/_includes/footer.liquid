<div class="w-full bg-black py-4 px-6 text-center">
  <div class="max-w-screen-2xl mx-auto">
    <div class="md:flex md:justify-center md:my-8">
      <div class="mx-auto md:ml-0 md:mr-10 lg:mr-20">
        <img src="{{- config.footerIcon | url -}}"
             class="block md:inline-block mx-auto mb-4 md:mb-3 mt-3 h-24"
             alt="{{- config.name -}}"
        />
      </div>

      <div class="text-bold text-center md:text-left
                  md:grid md:grid-rows-4 md:grid-flow-col md:w-5/12">
        {%- for entry in config.footer -%}
          <a href="{{ entry.url | url }}"
             class="transition block md:inline-block text-white hover:text-white
                    mx-3 my-1 md:my-0 hover:underline"
          >
            {{- entry.name -}}
          </a>
        {%- endfor -%}
      </div>
    </div>

    <div class="flex-wrap md:flex-nowrap flex justify-center w-full
                text-white text-xs pt-4 md:pb-4">
      <p class="w-full md:w-auto order-3 md:order-1">
        &#169; {{ config.copyright }}
      </p>
      <p class="hidden md:inline order-2 px-1">|</p>
      <p class="w-full md:w-auto order-1 md:order-3 mb-1 md:mb-0">
        See anything wrong?
        <a class="text-white hover:text-gray-400 underline"
           href="{{- config.issues -}}">
          Raise an Issue
        </a>
      </p>
    </div>
  </div>
</div>
