---
layout: default.liquid
---
<div class="__article__">
  {%- if cover -%}
  <div class="bg-black text-center text-primary mb-4
              bg-no-repeat bg-cover bg-center bg-fixed"
       style="{%- if cover_img -%}background-image: url({{ cover_img | url }});{%- endif-%}">
    <div class="bg-black bg-opacity-30 px-10 pt-36 mb-4">
      <h1 class="text-8xl mb-10 font-bold uppercase">{{- title -}}</h1>
      <p class="text-2xl mb-32">{{- description -}}</p>
      <div class="max-w-screen-md mx-auto p-4
                  flex flex-wrap md:flex-nowrap justify-between">
        {%- if author -%}
          <a class="mt-1 text-primary" href="{{- author_url -}}">{{- author -}}</a>
        {%- endif -%}
        {%- unless hide_date -%}
          {%- if page.date -%}
          <span class="mt-1">
            <i class="far fa-calendar-alt"></i> {{ page.date | date: "%B %e, %Y" }}
          </span>
          {%- endif -%}
        {%- endunless -%}
      </div>
    </div>
  </div>
  {%- else -%}
  <div class="max-w-screen-md mx-auto p-4">
    <h1 class="text-5xl text-black font-bold pt-4 pb-3">{{- title -}}</h1>
    <div class="text-gray-500">
      {%- if description -%}
      <p class="mt-1 mb-2">{{- description -}}</p>
      {%- endif -%}

      <div class="flex flex-wrap md:flex-nowrap justify-between">
        <a class="mt-1" href="{{- author_url -}}">{{- author -}}</a>
        {%- unless hide_date -%}
        <span class="mt-1">
          <i class="far fa-calendar-alt"></i> {{ page.date | date: "%B %e, %Y" }}
        </span>
        {%- endunless -%}
      </div>
    </div>
  </div>
  {%- endif -%}

  <article class="prose max-w-screen-md mx-auto p-4 mb-8">
    {{ content }}
  </article>
</div>
